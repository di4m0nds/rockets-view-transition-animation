---
import Logo from "./Logo.astro"
---

<header class="w-full px-6 md:px-20 py-4">
    <div class="flex flex-col md:flex-row justify-start items-center">
        <div class="flex-grow basis-0">
            <div class="flex flex-row justify-start items-center gap-x-2 md:gap-x-4">
                <Logo />
                <h1 class="text-3xl select-none font-medium">Rocket Explorer</h1>
            </div>
        </div>
        <div class="mt-3 md:mt-0">
            <h1 class="font-light text-md">Unveiling the Wonders of Space Travel</h1>
        </div>
        <div class="flex-grow basis-0" />
    </div>
</header>
